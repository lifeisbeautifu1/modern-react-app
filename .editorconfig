# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*]
indent_style = space
indent_size = 2

# Life without horizontal scrollbars and other quality of life changes
max_line_length = 80
charset = utf-8
trim_trailing_whitespace = true

